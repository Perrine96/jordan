{% extends 'base.html.twig' %}

{% block title %}Jordan - Cart{% endblock %}

{% block body %}
    <h1 class="text-center mt-5 fs-1 fw-bold">Your Cart</h1>
    <div class="d-flex justify-content-center">
    <p>
        <i class="bi bi-cart"></i>
        Articles
        {% if cartCount > 0 %}
            <span class="badge bg-danger">{{ cartCount }}</span>
        {% endif %}
    </p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if cart is empty %}
                            <tr>
                                <td colspan="5" class="text-center">Your cart is empty.</td>
                            </tr>
                        {% else %}
                            {% for product in cart %}
                                <tr>
                                    <td>{{ product.name }}</td>
                                    <td>{{ product.price }}</td>
                                    <td>
                                        <a href="{{ path('cart_decrease', {'id': product.id}) }}" class="btn btn-outline-secondary btn-sm">-</a>
                                        <span class="mx-2">{{ product.quantity }}</span>
                                        <a href="{{ path('cart_increase', {'id': product.id}) }}" class="btn btn-outline-secondary btn-sm">+</a>
                                    </td>
                                    <td>{{ product.total }}</td>
                                    <td>
                                        <a href="{{ path('cart_remove', {'id': product.id}) }}" class="btn btn-danger">Remove</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card bg-dark text-white shadow">
            <div class="card-body d-flex justify-content-between align-items-center">
                <span class="fs-5">Total :</span>
                <span class="fw-bold fs-4">{{ total }} $</span>
            </div>
            </div>
        </div>
    </div>
{% endblock %}
