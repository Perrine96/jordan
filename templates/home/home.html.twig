{% extends 'base.html.twig' %}

{% block title %}Jordan - Home{% endblock %}

{% block body %}
  <section class="py-5 bg-dark text-white">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6 text-center text-md-start">
          <h1 class="display-3 fw-bold mb-3 text-white">Welcome to <span class="text-danger">Jordan</span></h1>
          <p class="lead mb-4 text-white">
            Discover our exclusive selection of sneakers and trendy clothing.<br>
            <br>
            Get the best deals and a unique shopping experience!
          </p>
          <a href="{{ path('app_products') }}" class="btn btn-danger btn-lg px-4 me-2">See products</a>
        </div>
        <div class="col-md-6 text-center mt-4 mt-md-0">
          <img src="{{ asset('img/hero.jpg') }}"
               alt="Jordan Hero" class="img-fluid rounded shadow-lg" style="max-height: 350px;">
        </div>
      </div>
    </div>
  </section>
  <section class="py-5">
    <div class="container">
      <div class="row justify-content-center">
          <h2 class="text-center mb-4">Our Latest Products</h2>
            {% for product in products %}
                <div class="col-md-4 d-flex justify-content-center mb-4">
                    <div class="card shadow-sm border-danger zoom-card" style="max-width: 18rem; width: 100%;">
                        <img src="{{ product.image }}" class="card-img-top" alt="">
                        <div class="card-body text-center">
                            <h3 class="card-title">{{product.name}}</h3>
                            <h4>{{product.model}}</h4>
                            <h5>{{product.price}} $</h5>
                            {% if product.quantity > 0 %}
                                <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-danger">Add to cart</a>
                            {% else %}
                                <a href="#" class="btn btn-danger disabled">Out of stock</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="d-flex justify-content-center mt-4">
                <a href="{{ path('app_products') }}" class="btn btn-dark">See all products</a>
            </div>
      </div>
    </div>
  </section>
{% endblock %}